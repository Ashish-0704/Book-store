{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": [
    "config/**/*",
    "controllers/**/*",
    "routes/**/*",
    "models/**/*",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}